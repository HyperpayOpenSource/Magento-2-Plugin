            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="oppwa" type="host">*.oppwa.com</value>
                <value id="oppwalive" type="host">oppwa.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="oppwa" type="host">*.oppwa.com</value>
                <value id="oppwalive" type="host">oppwa.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="oppwa" type="host">*.oppwa.com</value>
                <value id="oppwalive" type="host">oppwa.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="oppwa" type="host">*.oppwa.com</value>
                <value id="oppwalive" type="host">oppwa.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
